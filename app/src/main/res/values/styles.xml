<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary</item>
        <item name="colorAccent">@color/theme_primary</item>
    </style>

    <style name="WebTitle"
        parent="@android:style/TextAppearance">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ViaTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/md_grey_400</item>
    </style>

    <style name="CollapsingToolbarTitleStyle"
        parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

</resources>
